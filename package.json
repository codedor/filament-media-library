{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx tailwindcss -i resources/css/plugin.css -o dist/css/laravel-media.css --postcss --watch && vite",
        "build:styles": "npx tailwindcss -i resources/css/plugin.css -o dist/css/laravel-media.css --postcss --minify && npm run purge && vite build",
        "purge": "filament-purge -i dist/css/laravel-media.css -o dist/css/laravel-media.css",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.0.2",
        "@tailwindcss/container-queries": "^0.1.1",
        "autoprefixer": "^10.4.7",
        "esbuild": "^0.8.57",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.14",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "sass": "^1.74.1",
        "tailwindcss": "^3.2.4"
    },
    "dependencies": {
        "@ryangjchandler/alpine-tooltip": "^1.2.0",
        "cropperjs": "^1.5.13",
        "laravel-vite-plugin": "^1.0.2",
        "vite": "^5.2.8"
    }
}
