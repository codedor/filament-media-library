{
    "name": "codedor/laravel-attachments",
    "description": "Attachments package for Filament",
    "keywords": [
        "codedor",
        "laravel",
        "laravel-attachments"
    ],
    "homepage": "https://github.com/codedor/laravel-attachments",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-icons": "^1.5",
        "filament/filament": "^2.16",
        "filament/spatie-laravel-translatable-plugin": "^2.0",
        "illuminate/contracts": "^9.0 || ^10.0",
        "livewire/livewire": "^2.11",
        "owenvoke/blade-fontawesome": "^2.2",
        "spatie/image": "^2.2",
        "spatie/laravel-package-tools": "^1.12",
        "spatie/laravel-translatable": "^6.3"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.2",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Codedor\\Attachments\\": "src",
            "Codedor\\Attachments\\Database\\Factories\\": "database/factories"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Codedor\\Attachments\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Codedor\\Attachments\\Providers\\AttachmentServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
